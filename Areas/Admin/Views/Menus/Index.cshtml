@model IEnumerable<ASP.NET_Core_MVC.Models.TbMenu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản Lý Menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản Lý Menu</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <a asp-action="Create" class="btn btn-success">Thêm Mới</a>
                            </h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 200px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Tìm kiếm">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tiêu đề</th>
                                        <th>Alias</th>
                                        <th>Cấp</th>
                                        <th>Vị Trí</th>
                                        <th>Hiện</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.Title)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.Alias)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.Levels)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.Position)</td>
                                            <td>@Html.DisplayFor(ModelItem => item.IsActive)</td>

                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-primary btn-sm">Sửa</a>
                                                <a asp-action="Details" asp-route-id="@item.MenuId" class="btn btn-info btn-sm">Chi Tiết</a>
                                                <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-danger btn-sm">Xoá</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>
</div>



